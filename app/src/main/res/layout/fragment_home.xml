<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayCash"
                    android:fontFamily="@font/montserrateb"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/Orange"/>

                <ImageView
                    android:id="@+id/notif_navbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_path_2"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="3dp"/>

                <ImageView
                    android:id="@+id/history_navbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_path_417"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_navbar"
                    android:layout_height="28dp"
                    android:layout_width="28dp"
                    android:src="@drawable/user"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_pay"
            android:layout_width="450dp"
            android:layout_height="155dp"
            android:layout_below="@id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/Blue"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrateb"
                    android:gravity="center_horizontal"
                    android:text="Pay Now"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="4"
                    android:rowCount="2">

                    <ImageView
                        android:id="@+id/send_money_btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/money_transfer" />

                    <ImageView
                        android:id="@+id/topup_btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/topup" />

                    <ImageView
                        android:id="@+id/request_btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/send" />

                    <ImageView
                        android:id="@+id/more_btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/send" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserratr"
                        android:text="Pay or Send"
                        android:textColor="@color/colorWhite"
                        android:textSize="9dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserratr"
                        android:text="Add Money"
                        android:textColor="@color/colorWhite"
                        android:textSize="9dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserratr"
                        android:text="Request"
                        android:textColor="@color/colorWhite"
                        android:textSize="9dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserratr"
                        android:text="More"
                        android:textColor="@color/colorWhite"
                        android:textSize="9dp"
                        android:textStyle="bold" />
                </GridLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/tx_send"
            android:layout_below="@id/card_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Money To"
                android:fontFamily="@font/montserrateb"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/Black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/montserrateb"
                android:textSize="8dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_contact"
            android:layout_width="335dp"
            android:layout_height="101dp"
            android:layout_below="@id/tx_send"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="12dp"
            android:foregroundGravity="center_horizontal"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/send_money_btn_img"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@drawable/passbook"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:fontFamily="@font/montserratr"
                        android:textSize="10dp"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/add"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/tx_explore"
            android:layout_below="@id/card_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:fontFamily="@font/montserrateb"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/Black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/montserrateb"
                android:textSize="8dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_explore">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

        </RelativeLayout>



    </RelativeLayout>
</androidx.core.widget.NestedScrollView>